        <activity android:name=".activity.AgendaModifyActivity" />
        <activity android:name=".activity.DiscoverHappenPublishActivity" />
        <activity android:name=".activity.TopicInfoActivity" />
        <activity android:name=".activity.ArticlePublishActivity" />
        <activity android:name=".activity.ArticlePublishPreviewActivity" />
        <activity android:name=".activity.WorkActivity" />
        <activity android:name=".activity.TopicReplyActivity" />
        <activity android:name=".activity.AtActivity" />
