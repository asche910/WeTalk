<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--    点赞（三）、评论（三）、收藏（三）、发动态   -->
    <TextView
        android:id="@+id/text_timeline_time"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:gravity="center"
        android:text="今天16:42"
        />

    <LinearLayout
        android:layout_width="44dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.flyco.roundview.RoundFrameLayout
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:rv_strokeColor="#cccccc"
            app:rv_strokeWidth="1dp"
            app:rv_cornerRadius="22dp">

            <ImageView
                android:id="@+id/img_timeline_action"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_action_note"
                />

        </com.flyco.roundview.RoundFrameLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#cccccc"
            android:layout_gravity="center_horizontal"
            android:minHeight="40dp"
            />

    </LinearLayout>

    <com.flyco.roundview.RoundLinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="40dp"
        android:paddingBottom="5dp"
        android:orientation="vertical"
        app:rv_strokeColor="#cccccc"
        app:rv_strokeWidth="1dp"
        app:rv_cornerRadius="6dp">

        <TextView
            android:id="@+id/text_timeline_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is title!"
            android:textSize="18sp"
            android:textColor="#333"
            android:maxLines="1"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/text_timeline_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="Hello, World!Hello, World!Hello, World!Hello, World!"
            android:textSize="16sp"
            android:maxLines="3"
            android:ellipsize="end"/>

    </com.flyco.roundview.RoundLinearLayout>

</LinearLayout>