<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_item_chat_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="4dp"
        android:src="@drawable/img_avatar_default"
        />

    <TextView
        android:id="@+id/text_item_chat_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="80dp"
        android:layout_toRightOf="@id/img_item_chat_avatar"
        android:layout_toEndOf="@id/img_item_chat_avatar"
        android:paddingLeft="15dp"
        android:paddingStart="15dp"
        android:paddingTop="6dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="6dp"
        android:text="Hello, World!"
        android:textSize="18sp"
        android:textIsSelectable="true"
        android:background="@drawable/chat_friend"
        android:visibility="visible"
        />


    <ImageView
        android:id="@+id/img_item_chat_imgcontent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="80dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/img_item_chat_avatar"
        android:layout_toEndOf="@id/img_item_chat_avatar"
        android:paddingLeft="15dp"
        android:paddingStart="15dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="6dp"
        android:src="@drawable/img_avatar"
        android:adjustViewBounds="true"
        android:maxWidth="200dp"
        android:maxHeight="200dp"
        android:visibility="gone"
        />



</RelativeLayout>