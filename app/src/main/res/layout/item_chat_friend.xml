<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_item_chat_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="6dp"
        android:src="@drawable/img_avatar_default"
        />

    <TextView
        android:id="@+id/text_item_chat_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/img_item_chat_avatar"
        android:layout_toEndOf="@id/img_item_chat_avatar"
        android:padding="10dp"
        android:text="Hello, World!"
        android:textSize="18sp"
        android:textIsSelectable="true"
        android:background="@drawable/chat_friend"
        />


</RelativeLayout>